#!/usr/bin/env python
# Save an Instagram post in the current directory as pt format.
#
# Dependencies:
# - python ~ 3.5
#   - you-get ~ 0.4
#

import json, re, sys
from datetime import datetime
from you_get.common import *
from you_get.util import *
from you_get.extractors.instagram import instagram_download

site_info = 'Instagram'

def main():
    for url in sys.argv[1:]:
        m = re.match('https?://(www\.)?instagram\.com/.*p/([^/]+)', url) or \
            re.match('https?://(www\.)?instagram\.com/.*tv/([^/]+)', url)
        assert m
        title = m.group(2)
        log.w(title)

        cont = get_content(url, headers=fake_headers)
        #data = re.search(r'window\.__additionalDataLoaded\(\'[^\']+\',(.*)\);</script>', cont)
        #post = json.loads(data.group(1))
        data = re.search(r'window\._sharedData\s*=\s*(.*);</script>', cont)
        try:
            info = json.loads(data.group(1))
            post = info['entry_data']['PostPage'][0]
            assert post
        except:
            load_cookies('/home/soimort/instagram.com_cookies.txt')
            cont = get_content(url, headers=fake_headers)
            # with logged-in cookies
            data = re.search(r'window\.__additionalDataLoaded\(\'[^\']+\',(.*)\);</script>', cont)
            if data is not None:
                log.e('[Warning] Cookies needed.')
            post = json.loads(data.group(1))

        date = post['graphql']['shortcode_media']['taken_at_timestamp']
        post_time = datetime.fromtimestamp(date).strftime('%a %d %b %Y')
        author = post['graphql']['shortcode_media']['owner']['full_name']
        try:
            text = post['graphql']['shortcode_media']['edge_media_to_caption']['edges'][0]['node']['text']
        except:
            text = ''
        outf = open(title + '.pt', 'w')
        outf.write('---\n')
        outf.write('author: %s\n' % author)
        outf.write('date: %s\n' % post_time)
        outf.write('source: %s\n' % 'Instagram')
        outf.write('url: %s\n' % url)
        outf.write('---\n')
        outf.write(text)
        outf.write('\n')
        outf.close()

        instagram_download(url)

if __name__ == '__main__':
    main()
